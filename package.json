{
  "name": "account-interventions-service",
  "description": "Account interventions service",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@1.22.21",
  "scripts": {
    "test": "yarn test:unit",
    "test:unit": "jest --group=unit --coverage --runInBand --testPathIgnorePatterns \"src/contract-testing/*\"",
    "test:pact:provider": "jest --group=contract --runInBand --testPathPattern=\"src/contract-testing/provider/*\"",
    "test:pact:consumer": "jest --group=contract --runInBand --testPathPattern=\"src/contract-testing/consumer/*\"",
    "connect:pact:broker": "tsc src/contract-testing/test-helpers/connect-to-pact-broker.ts && node src/contract-testing/test-helpers/connect-to-pact-broker.js",
    "pact:publish:contracts": "tsc src/contract-testing/test-helpers/publish-pacts.ts && node src/contract-testing/test-helpers/publish-pacts.js",
    "lint": "yarn lint:code && yarn lint:spec && yarn lint:iac",
    "lint:code": "eslint --ext .ts .",
    "lint:code:fix": "yarn lint:code --fix",
    "lint:iac": "for f in src/infra/**/template.yaml; do (sam validate --lint -t $f) || exit 1; done",
    "lint:spec:oas": "spectral lint src/specs/api.yaml",
    "lint:spec": "yarn lint:spec:oas",
    "audit:fix": "yarn-audit-fix",
    "clean": "rimraf .aws-sam coverage",
    "build": "sam build -t src/infra/main/template.yaml",
    "package": "yarn clean && yarn build",
    "precommit": "pre-commit run",
    "postinstall": "husky"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.3.0",
    "@aws-lambda-powertools/metrics": "^2.3.0",
    "@aws-lambda-powertools/tracer": "^2.3.0",
    "@aws-sdk/client-dynamodb": "^3.609.0",
    "@aws-sdk/client-sqs": "^3.609.0",
    "@aws-sdk/util-dynamodb": "^3.609.0",
    "@smithy/node-http-handler": "^3.1.1"
  },
  "devDependencies": {
    "@aws-sdk/client-sso-oidc": "^3.609.0",
    "@aws-sdk/client-sts": "^3.609.0",
    "@pact-foundation/pact": "^13.1.1",
    "@pact-foundation/pact-node": "^10.18.0",
    "@stoplight/spectral-cli": "^6.11.1",
    "@types/aws-lambda": "^8.10.140",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "aws-crt": "^1.21.3",
    "aws-lambda": "^1.0.7",
    "aws-sdk-client-mock": "^4.0.1",
    "aws-sdk-client-mock-jest": "^4.0.1",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-tsdoc": "^0.3.0",
    "eslint-plugin-unicorn": "^54.0.0",
    "express": "^4.18.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-openapi": "^0.14.2",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.8",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "yarn-audit-fix": "^10.0.7"
  },
  "resolutions": {
    "axios": "^1.7.2"
  }
}
