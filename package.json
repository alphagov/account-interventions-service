{
  "name": "account-interventions-service",
  "description": "Account interventions service",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "^yarn@1.22.19",
  "scripts": {
    "test": "yarn test:unit",
    "test:unit": "jest --group=unit --coverage --runInBand",
    "lint": "yarn lint:code && yarn lint:spec",
    "lint:code": "eslint --ext .ts .",
    "lint:code:fix": "yarn lint:code --fix",
    "lint:spec:oas": "spectral lint src/specs/api.yaml",
    "lint:spec": "yarn lint:spec:oas",
    "audit:fix": "yarn-audit-fix",
    "build": "yarn clean && webpack",
    "clean": "rimraf dist coverage",
    "lint:iac": "for f in src/infra/**/template.yaml; do (sam validate --lint -t $f) || exit 1; done",
    "package:sam": "sam build -t src/infra/main/template.yaml",
    "package:sam:fix": "run-script-os",
    "package:sam:fix:darwin": "sed -i '' -e \"s|\\.+\\/.*[a-zA-Z0-9_-]+\\/\\(.*\\)|\\1|g\" .aws-sam/build/template.yaml",
    "package:sam:fix:linux": "sed -i -e \"s|\\.+\\/.*[a-zA-Z0-9_-]+\\/\\(.*\\)|\\1|g\" .aws-sam/build/template.yaml",
    "package": "rimraf .aws-sam && yarn package:sam && yarn package:sam:fix"
  },
  "dependencies": {
    "@aws-lambda-powertools/commons": "^1.14.0",
    "@aws-lambda-powertools/logger": "^1.14.0",
    "@aws-lambda-powertools/metrics": "^1.14.0",
    "@aws-lambda-powertools/tracer": "^1.14.0",
    "@aws-sdk/client-dynamodb": "^3.430.0",
    "@aws-sdk/util-dynamodb": "^3.433.0"
  },
  "devDependencies": {
    "@stoplight/spectral-cli": "^6.11.0",
    "@types/aws-lambda": "^8.10.125",
    "@types/jest": "^29.5.4",
    "@types/node": "^18.18.4",
    "@types/webpack": "^5.28.3",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "aws-crt": "^1.18.1",
    "aws-lambda": "^1.0.7",
    "clean-webpack-plugin": "^4.0.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-unicorn": "^48.0.1",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "run-script-os": "^1.1.6",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "yaml-cfn": "^0.3.2",
    "yarn-audit-fix": "^10.0.1",
    "aws-sdk-client-mock": "^3.0.0",
    "aws-sdk-client-mock-jest": "^3.0.0"
  }
}
