{
  "name": "account-interventions-service",
  "description": "Account interventions service",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@1.22.21",
  "scripts": {
    "test": "yarn test:unit",
    "test:unit": "jest --group=unit --coverage --runInBand --testPathIgnorePatterns \"src/contract-testing/*\"",
    "test:pact": "jest --group=contract --runInBand --testPathPattern=\"src/contract-testing/*\"",
    "lint": "yarn lint:code && yarn lint:spec && yarn lint:iac",
    "lint:code": "eslint --ext .ts .",
    "lint:code:fix": "yarn lint:code --fix",
    "lint:iac": "for f in src/infra/**/template.yaml; do (sam validate --lint -t $f) || exit 1; done",
    "lint:spec:oas": "spectral lint src/specs/api.yaml",
    "lint:spec": "yarn lint:spec:oas",
    "audit:fix": "yarn-audit-fix",
    "clean": "rimraf .aws-sam coverage",
    "build": "sam build -t src/infra/main/template.yaml",
    "package": "yarn clean && yarn build",
    "precommit": "pre-commit run",
    "postinstall": "husky",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-lambda-powertools/commons": "^1.18.0",
    "@aws-lambda-powertools/logger": "^1.18.0",
    "@aws-lambda-powertools/metrics": "^1.18.0",
    "@aws-lambda-powertools/tracer": "^1.18.0",
    "@aws-sdk/client-dynamodb": "^3.509.0",
    "@aws-sdk/client-sqs": "^3.509.0",
    "@aws-sdk/util-dynamodb": "^3.509.0",
    "@smithy/node-http-handler": "^2.3.1"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^12.2.0",
    "@stoplight/spectral-cli": "^6.11.0",
    "@types/aws-lambda": "^8.10.133",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "aws-crt": "^1.21.1",
    "aws-lambda": "^1.0.7",
    "aws-sdk-client-mock": "^3.0.1",
    "aws-sdk-client-mock-jest": "^3.0.1",
    "esbuild": "0.20.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-unicorn": "^51.0.1",
    "express": "^4.18.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-openapi": "^0.14.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "yarn-audit-fix": "^10.0.7"
  },
  "resolutions": {
    "axios": "^1.6.5"
  }
}
